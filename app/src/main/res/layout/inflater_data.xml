<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:layout_marginTop="@dimen/dp_20"
    android:elevation="@dimen/dp_2"
    app:cardCornerRadius="@dimen/dp_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/subject_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_55"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/color_backgrond_white"
            app:civ_border_width="@dimen/dp_2" />

        <com.example.reportapp.TextView_Lato
            android:id="@+id/subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#A39F9F"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <com.example.reportapp.TextView_lato_thin
            android:id="@+id/subject_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <com.example.reportapp.TextView_lato_thin
            android:id="@+id/subject_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>